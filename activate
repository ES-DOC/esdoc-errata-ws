# Set home path
export ERRATA_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Extend python path.
export PYTHONPATH=$PYTHONPATH:$ERRATA_HOME

# Ensure shell scripts are executable.
chmod a+x $ERRATA_HOME/sh/*.sh

# Web-service commands.
alias errata-ws=$ERRATA_HOME/sh/web_run_service.sh
alias errata-ws-config-update=$ERRATA_HOME/sh/web_config_update.sh
alias errata-ws-daemon-init=$ERRATA_HOME/sh/web_daemon_init.sh
alias errata-ws-daemon-kill=$ERRATA_HOME/sh/web_daemon_kill.sh
alias errata-ws-daemon-status=$ERRATA_HOME/sh/web_daemon_status.sh
alias errata-ws-logs-reset=$ERRATA_HOME/sh/web_logs_reset.sh

# Database commands.
alias errata-db-setup=$ERRATA_HOME/sh/db_setup.sh
alias errata-db-install=$ERRATA_HOME/sh/db_install.sh
alias errata-db-uninstall=$ERRATA_HOME/sh/db_uninstall.sh
alias errata-db-reset=$ERRATA_HOME/sh/db_reset.sh

# Test related commands.
alias errata-db-insert-test-issues=$ERRATA_HOME/sh/db_insert_test_issues.sh
alias errata-db-create-large-for-testing=$ERRATA_HOME/sh/db_create_large_for_testing.sh
alias errata-tests=$ERRATA_HOME/sh/run_tests.sh

# Initialization related commands.
alias errata-init-config=$ERRATA_HOME/sh/init_config.sh
alias errata-init-venv=$ERRATA_HOME/sh/init_venv.sh
alias errata-upgrade-venv=$ERRATA_HOME/sh/upgrade_venv.sh
