{
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "properties": {
        "datasets": {
            "items": {
                "maxLength": 1023,
                "minLength": 1,
                "pattern": "^[a-zA-Z0-9_-]+(.[a-zA-Z0-9_-]+)+#[0-9]{8}$",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "dateClosed": {
            "type": "string",
            "format": "date-time"
        },
        "dateCreated": {
            "type": "string",
            "format": "date-time"
        },
        "dateUpdated": {
            "type": "string",
            "format": "date-time"
        },
        "description": {
            "minLength": 1,
            "type": "string"
        },
        "institute": {
            "maxLength": 63,
            "minLength": 1,
            "type": "string"
        },
        "materials": {
            "items": {
                "maxLength": 1023,
                "minLength": 1,
                "pattern": "\\.(jpg|gif|png|tiff)$",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "models": {
            "items": {
                "maxLength": 63,
                "minLength": 1,
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "project": {
            "maxLength": 63,
            "minLength": 4,
            "type": "string"
        },
        "severity": {
            "enum": [
                "low",
                "medium",
                "high",
                "critical"
            ],
            "type": "string"
        },
        "title": {
            "maxLength": 255,
            "minLength": 1,
            "type": "string"
        },
        "uid": {
            "pattern": "^[0-9a-f]{8}(-[0-9a-f]{4}){3}-[0-9a-f]{12}$",
            "type": "string"
        },
        "url": {
            "maxLength": 1023,
            "minLength": 1,
            "type": "string"
        },
        "workflow": {
            "enum": [
                "new",
                "on hold",
                "wontfix",
                "resolved"
            ],
            "type": "string"
        }
    },
    "required": [
        "datasets",
        "dateUpdated",
        "description",
        "institute",
        "models",
        "project",
        "severity",
        "title",
        "uid",
        "workflow"
    ],
    "title": "ESGF issue JSON schema",
    "type": "object"
}