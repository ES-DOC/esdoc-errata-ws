{
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "properties": {
        "datasets": {
            "items": {
                "minLength": 1,
                "type": "string"
            },
            "minItems": 1,
            "type": "array",
            "uniqueItems": true
        },
        "dateCreated": {
            "format": "date-time",
            "type": "string"
        },
        "dateUpdated": {
            "format": "date-time",
            "type": "string"
        },
        "description": {
            "minLength": 1,
            "type": "string"
        },
        "facets": {
            "title": "Extracted facets.",
            "type": "object"
        },
        "materials": {
            "items": {
                "pattern": "\\.(jpg|gif|png|tiff)$",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "project": {
            "enum": [
                "cmip1",
                "cmip2",
                "cmip3",
                "cmip5",
                "cmip6",
                "cordex",
                "obs4mips",
                "input4mips"
            ],
            "minLength": 1,
            "type": "string"
        },
        "severity": {
            "enum": [
                "low",
                "medium",
                "high",
                "critical"
            ],
            "type": "string"
        },
        "status": {
            "enum": [
                "new",
                "onhold",
                "wontfix",
                "resolved"
            ],
            "type": "string"
        },
        "title": {
            "minLength": 1,
            "type": "string"
        },
        "uid": {
            "pattern": "^[0-9a-f]{8}(-[0-9a-f]{4}){3}-[0-9a-f]{12}$",
            "type": "string"
        },
        "url": {
            "type": "string"
        }
    },
    "required": [
        "dateCreated",
        "dateUpdated",
        "uid",
        "title",
        "description",
        "severity",
        "status",
        "datasets",
        "url",
        "materials",
        "project",
        "facets"
    ],
    "title": "ES-DOC errata JSON schema: endpoint = /1/issue/update",
    "type": "object"
}